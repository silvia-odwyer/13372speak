<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.silviaodwyer.leetspeaktranslator.HomeActivity"
    android:background="@color/darknavy">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1337SPEAK TRANSLATOR"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openTranslatorButton"
        android:layout_width="216dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/border"
        android:fontFamily="@font/titillium"
        android:text="OPEN TRANSLATOR"
        android:textColor="@color/scifiblue"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/learnMoreButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appTitle"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/learnMoreButton"
        android:layout_width="217dp"
        android:layout_height="55dp"
        android:layout_marginBottom="196dp"
        android:background="@drawable/border"
        android:text="LEARN MORE"
        android:textColor="@color/scifiblue"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:fontFamily="@font/titilliumregular"
        android:text="Encode your messages in 1337. Choose from B45ic 1337 or 4vanc3d 1337. :)"
        android:textColor="@color/green"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="376dp" />
</android.support.constraint.ConstraintLayout>
